<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakTime.MainPage"
             x:Name="frm">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30">

            <Label
                x:Name="lblDisplay"
                Text="Start Break Time"
                FontSize="Title"
                HorizontalOptions="Center"
                Padding="0,75"/>

            <Button
                x:Name="btn5"
                Clicked="Take5_Clicked"
                Text="Take 5"/>

            <Button
                x:Name="btn10"
                Text="Take 10"
                Clicked="Take10_Clicked"/>

            <Button
                x:Name="btn15"
                Text="Take 15"
                Clicked="Take15_Clicked"/>

            <Button
                Text="Reset"
                Margin="0,60,0,0"
                Clicked="Reset_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

